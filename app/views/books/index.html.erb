<h1>本の一覧</h1>

<%= link_to "本を追加", new_book_path %>

<table>
  <tr>
    <th>タイトル</th>
    <th>ISBN</th>
    <th>価格</th>
    <th>操作</th>
    </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.isbn %></td>
    <td><%= book.price %></td>
    <td><%= link_to "詳細", book_path(book) %>　<%= link_to "編集", edit_book_path(book) %></td>
    </tr>
    <% end %>
</table>
